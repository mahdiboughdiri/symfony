<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Authors</title>
    <style>
      body {
        font-family: "Arial", sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      h1 {
        color: #343a40;
      }

      .flash-messages {
        margin-bottom: 20px;
        background-color: #d4edda;
        color: #155724;
        padding: 10px;
        border: 1px solid #c3e6cb;
        border-radius: 5px;
        width: 100%;
        max-width: 600px;
        text-align: center;
      }

      table {
        width: 100%;
        max-width: 600px;
        border-collapse: collapse;
        margin-bottom: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }

      table,
      th,
      td {
        border: 1px solid #dee2e6;
      }

      th,
      td {
        padding: 12px 15px;
        text-align: left;
      }

      th {
        background-color: #343a40;
        color: white;
      }

      tr:nth-child(even) {
        background-color: #f2f2f2;
      }

      a {
        color: #007bff;
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      .add-author {
        background-color: #28a745;
        color: white;
        padding: 10px 15px;
        border-radius: 5px;
        text-decoration: none;
        font-size: 16px;
      }

      .add-author:hover {
        background-color: #218838;
      }
    </style>
  </head>
  <body>
    <div class="flash-messages">
      {% for message in app.flashes('message') %}
      {{ message }}
      {% endfor %}
    </div>

    <h1>List of Authors</h1>

    <table>
      <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
      {% for a in authors %}
      <tr>
        <td>{{ a.username }}</td>
        <td>{{ a.email }}</td>
        <td>
          <a href="{{ path('edit_author', { id: a.id }) }}">Edit</a> |
          <a
            href="{{ path('delete_author', { id: a.id }) }}"
            onclick="return confirm('Are you sure you want to delete this author?');"
            >Delete</a
          >
        </td>
      </tr>
      {% endfor %}
    </table>

    <a href="{{ path('add_author') }}" class="add-author">Add Author</a>
  </body>
</html>
